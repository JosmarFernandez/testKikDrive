
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="containerlogin">
        <h1>Kik Drive</h1>
        <h4 class="text-center">Kik Drive Mejorando el Gestionamineto</h4>
        <br />
        <h5 class="text-center">Inicie sesión para acceder</h5>

        <div>
            <div>
                <div>
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Nombre de usuario" name="username" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Contrasena" name="password" />
                        </div>

                        <p class="submit">

                            <input asp-area="" asp-page="/CRUDs/SeccionPrincipal" type="submit" name="login" class="button" value="Entrar" />
                        </p>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

