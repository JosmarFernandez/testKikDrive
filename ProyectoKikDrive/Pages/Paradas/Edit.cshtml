@page
@model ProyectoKikDrive.Pages.Paradas.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="container">
        <h1>Kik Drive</h1>
        <h4 class="text-center">Kik Drive Mejorando el Gestionamineto</h4>

        <h1>Editar Paradas</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Paradas.Incidentes" class="control-label"></label>
                        <input asp-for="Paradas.Incidentes" class="form-control" />
                        <span asp-validation-for="Paradas.Incidentes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paradas.Tipo_incidente" class="control-label"></label>
                        <input asp-for="Paradas.Tipo_incidente" class="form-control" />
                        <span asp-validation-for="Paradas.Tipo_incidente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paradas.Fecha" class="control-label"></label>
                        <input asp-for="Paradas.Fecha" class="form-control" />
                        <span asp-validation-for="Paradas.Fecha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paradas.Hora" class="control-label"></label>
                        <input asp-for="Paradas.Hora" class="form-control" />
                        <span asp-validation-for="Paradas.Hora" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paradas.RutasId" class="control-label"></label>
                        <select asp-for="Paradas.RutasId" class="form-control" asp-items="ViewBag.RutasId"></select>
                        <span asp-validation-for="Paradas.RutasId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Paradas.Id" />
                    <div class="form-group">
                        <label asp-for="Paradas.CreatedAT" class="control-label"></label>
                        <input asp-for="Paradas.CreatedAT" class="form-control" />
                        <span asp-validation-for="Paradas.CreatedAT" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Paradas.UpdatedAT" class="control-label"></label>
                        <input asp-for="Paradas.UpdatedAT" class="form-control" />
                        <span asp-validation-for="Paradas.UpdatedAT" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Paradas.Status" /> @Html.DisplayNameFor(model => model.Paradas.Status)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-warning" />
                        <a class="btn btn-warning" asp-page="./Index">Regresar</a>
                        <a class="btn btn-warning button" asp-page="/CRUDs/SeccionPrincipal">Regresar a Home</a>
                    </div>
                </form>
            </div>
        </div>              
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
